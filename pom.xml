    </dependency>
    <!-- Build only dependencies -->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- Direct dependencies -->
    <dependency>
      <groupId>javax.ws.rs</groupId>
